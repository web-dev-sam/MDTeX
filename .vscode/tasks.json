{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MDTeX",
            "type": "shell",
            "command": "npm run build",
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "icon": {
                "id": "symbol-constructor",
                "color": "terminal.ansiWhite"
            },
            "options": {
                "statusbar": {
                    "label": "",
                    "detail": "Build MDTeX",
                    "running": {
                        "icon": {
                            "id": "sync~spin",
                        }
                    }
                }
            }
        },
        {
            "label": "Generate PDF",
            "type": "shell",
            "command": "npm run generate",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "icon": {
                "id": "rocket",
                "color": "terminal.ansiGreen"
            },
            "options": {
                "statusbar": {
                    "label": "Generate PDF",
                    "detail": "Generate PDF",
                    "running": {
                        "icon": {
                            "id": "sync~spin",
                        },
                    }
                }
            }
        },
        {
            "label": "Open PDF",
            "type": "shell",
            "command": "npm run open",
            "group": {
                "kind": "build"
            },
            "icon": {
                "id": "file-pdf",
                "color": "terminal.ansiWhite"
            },
            "presentation": {
                "reveal": "always",
                "focus": true
            }
        },
        {
            "label": "Refresh PDF",
            "command": "${command:latex-workshop.refresh-viewer}",
            "group": {
                "kind": "build",
            },
            "icon": {
                "id": "sync",
                "color": "terminal.ansiWhite"
            },
        },
        {
            "label": "Update",
            "group": {
                "kind": "build",
            },
            "presentation": {
                "reveal": "always",
                "focus": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Generate PDF",
                "Refresh PDF"
            ],
            "options": {
                "statusbar": {
                    "label": "",
                    "detail": "",
                }
            }
        }
    ]
}